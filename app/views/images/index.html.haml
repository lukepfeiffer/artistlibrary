%div.search
  = form_tag(images_path, method: :get) do
    %span#search
    = text_field_tag :tag, nil, placeholder: 'Search For Tags', id: 'search_bar'
    = submit_tag 'Search', class: 'search_button'

%div
  %p.p_text
    Your Pictures:
  - @images.each do |image|
    - if image.present?
      %div.view_image
        = image_tag image.url, class: 'image_url'
        %p
          = link_to 'Full Size Image', image.url
        %ul.description
          = image.description
          %p
            Tags:
            - image.tags.each do |tag|
              %span.tag= tag.name
          = link_to 'Delete Image', image_path(image), method: :delete, class: 'anchor', id: 'delete'
= will_paginate @images
