%div.field_holder
  %div.sign_up
    %p.text Sign Up Here
    = form_for(@user) do |f|
      = f.label :email
      (not shown)
      = f.text_field :email

      = f.label :username
      (required)
      = f.text_field :username

      = f.label :password
      = f.password_field :password

      = f.label :password_confirmation
      = f.password_field :password_confirmation

      = f.label :bio
      = f.text_area :bio, placeholder: 'A little about you'

      =f.submit 'Create User', class: 'enter'
  %div.sign_in
    %p.text Previous user?
    = form_tag(sessions_path) do
      = label_tag :email
      = text_field_tag :email, nil, placeholder: 'email@example.com'

      = label_tag :password
      = password_field_tag :password, nil, placeholder: 'Passord'
      = submit_tag 'Sign In', class: 'enter'
