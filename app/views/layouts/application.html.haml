!!!
%head
  = stylesheet_link_tag    "application", media: "all"
  = javascript_include_tag "application", media: 'all'
  = csrf_meta_tags
  %title
    Artistlibrary

%body#main
  - if current_user.present?
    %ul.layout_ul
      %li
        %span#username_link
          = current_user.username
        = link_to 'Sign Out', sign_out_path, method: :delete, id: 'sign_out'
      %li
        = link_to 'All Pictures', other_images_path, class: 'anchor', class: 'header_links'
        = link_to 'Add Picture', new_image_path, class: 'anchor', class: 'header_links'
        = link_to 'View Categories', categories_path, class: 'anchor', class: 'header_links'
  = yield
